<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color: #140c14;color:white;">
    <nav class="navbar navbar-expand-lg" data-bs-theme="dark" style="background-color: #d71b47">
        <div class="container-fluid">
            <a class="navbar-brand ms-4" href="#" id="logo-font">mc</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Comics", "Index", "Comics", null, new { @class = "nav-link text-light" })
                    </li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Authors", "Index", "Authors", null, new { @class = "nav-link text-light" })
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Genres", "Index", "Genres", null, new { @class = "nav-link text-light" })
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Types", "Index", "TypeCs", null, new { @class = "nav-link text-light" })
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Add role", "AddRoleUser", "Account", null, new { @class = "nav-link text-light" })</li>
                    }

                    <li class="nav-item">
                        @Html.ActionLink("Favorites", "Index", "FavotiresLists", null, new { @class = "nav-link text-light" })
                    </li>


                </ul>
                    @using (Html.BeginForm("Index","Comics", FormMethod.Get,new {@class="d-flex" }))
                    {
                        @Html.TextBox("search", null, new { @class = "form-control border-end-0 border bg-light rounded-2", @placeholder = "search..." })    
                            <button class="btn btn-outline-light border-2 rounded-pill ms-n5 mx-3" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                    }
                    




                    @Html.Partial("_LoginPartial")
                </div>
        </div>
    </nav>
    
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MyMangaSite</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
